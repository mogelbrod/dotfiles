# Bottom caption line
caption always "%{Yk} %?%{Bk}%-w%?%{Yk}%n %t%?(%u)%?%?%{Bk}%+w%?%{Kk} %=%c "

# Message display
#hardstatus message "%{kr}%h"

# Use color xterm
#term xtermc

autodetach on

# Initial screens
#screen 9 irssi
screen 0 bash

# Hide start up message
startup_message off

# Command key
escape "^Xx"
bind 'x' meta

# Scrollback
defscrollback 10000

# Enable visual bell
#bell_msg "Bell rang in %n"
vbell off #on
#vbell_msg " *beep* "

# Disable flow control key
defflow off

# Clear visual program UI when exiting
#altscreen on

# Binds
bind 'a' title
bind ' ' windowlist -b
bind 's' split
bindkey -k k7 screen
bindkey -k k8 kill
bindkey -k k9 windowlist -b
bindkey -k k; title
bindkey -k F1 prev
bindkey -k F2 next

