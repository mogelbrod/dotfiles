# Bottom caption line
caption always "%{Yk} %?%{Bk}%-w%?%{Yk}%n %t%?(%u)%?%?%{Bk}%+w%?%{Kk} %= %H "

# Message display
#hardstatus message "%{kr}%h"

# Use color xterm
#term xtermc

autodetach on

# Initial screens
screen 0 zsh

# Hide start up message
startup_message off

# Command key
escape "^Xx"
bind 'x' meta

# Scrollback
defscrollback 10000

# Enable visual bell
#bell_msg "Bell rang in %n"
vbell off #on
#vbell_msg " *beep* "

# Disable flow control key
defflow off

# Clear visual program UI when exiting
#altscreen on

# Binds
bind 'a' title
bind ' ' windowlist -b
bind 's' split
bind 'n' screen
bind ^n screen
bind 'c' copy
bind ^c copy
bind 'v' paste .
bind ^v paste .
