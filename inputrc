$include /etc/inputrc

# Laptop rebinds
# Ctrl+Delete
"\e[3;3~": kill-word
# Shift-Tab
"\e[Z": menu-complete

# Up/down scrolls through history (search if possible)
"\e[B": history-search-forward
"\e[A": history-search-backward

# Word moving
# Ctrl+left/right
"[1;5C": forward-word
"[1;5D": backward-word
# Alt+left/right
"[1;3C": forward-word
"[1;3D": backward-word

"\C-\b": backward-kill-word
"\C-\d": kill-word

# Page up/down inserts some keys otherwise further away
"\e[5~": "/"
"\e[6~": "~"

# Ctrl+p loads previous command, positions cursor for typing an option
#"\C-p": "\C-p\C-a\M-f "

# Ctrl+Q cycles between completions if multiple
"\C-q": menu-complete

# Ctrl+D deletes the whole line
"\C-d": kill-whole-line

# Options
set completion-ignore-case On
set visible-stats on
set show-all-if-ambiguous on
set mark-symlinked-directories on
set match-hidden-files off

# Disable bell
set bell-style none

$if Bash
  # do history expansion when space entered
  Space: magic-space
$endif

